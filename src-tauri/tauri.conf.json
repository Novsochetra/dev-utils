{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dev Utils",
  "version": "0.0.0-beta.20260102",
  "identifier": "com.devutils.prod",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Dev Utils",
        "width": 800,
        "height": 600,
        "minWidth": 720,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 16, "y": 22 },
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [ "*" ],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:app:default",
            "core:event:default"
          ]
        },
        "clipboard",
        "opener"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
